<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_commodity_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="貨號"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_commodity_name_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品名稱"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_commodity_price_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="單價"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_commodity_buyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="賣出數量"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_commodity_buy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="賣出時間"
            android:textSize="10dp" />

    </LinearLayout>
</LinearLayout>
